<h2>Edit Existing Activity</h2>
<%= form_tag activity_path(@activity), :method => :put do %>
  <%= label :activity, :event_name, 'Event Name', :class => 'col-form-label' %>
  <%= text_field :activity, 'event_name', :class => 'form-control' %>
  <%= label :activity, :organizer, 'Organizer', :class => 'col-form-label' %>
  <%= text_field :activity, 'organizer', :class => 'form-control' %>
  <%= label :activity, :max_size, 'Max Size', :class => 'col-form-label' %>
  <%= text_field :activity, 'max_size', :class => 'form-control' %>
  <%= label :activity, :category, 'Category', :class => 'col-form-label' %>
  <%= text_field :activity, 'category', :class => 'form-control' %>
  <%= label :activity, :date, 'Date', :class => 'col-form-label' %>
  <%= text_field :activity, 'date', :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Update Activity Info', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', activities, :class => 'btn btn-secondary' %>
<% end %>
